@using BlazorBootstrap
@inherits LayoutComponentBase

<style>
    /* Sidebar container styles */
    .sidebar1 {
        width: 60px; /* Initial width when not hovered */
        background-color: #333;
        height: 100%;
        position: fixed;
        left: 0;
        top: 0;
        overflow-x: hidden;
        transition: 0.3s;
    }

    /* Sidebar content styles */
    .sidebar-content {
        padding-top: 20px;
        flex-direction: column;
        align-items: center;
        color: white;
    }

    /* Sidebar item styles */
    .sidebar-item {
        padding: 10px;
        display: flex;
        text-align: left;
        cursor: pointer;
        transition: 0.3s;
    }

    /* Icon styles */
    .sidebar-item i {
        font-size: 24px;
    }

    /* Text styles (hide by default) */
    .sidebar-item span {
        display: none;
    }
    
    /* Expand the sidebar on hover */
    .sidebar1:hover {
        width: 250px; /* Expanded width */
    }

    /* Show text when sidebar is expanded */
    .sidebar1:hover .sidebar-item span {
        display: block;
        margin-left:10px;
        margin-top:5px;
    }

    /* Sidebar2 styles */
    .sidebar2 {
        width: calc(100% - 60px); /* Adjust the width based on your sidebar1 width */
        margin-left: 60px; /* Set to the same width as sidebar1 */
        transition: 0.3s;
    }

    /* Expand sidebar2 when sidebar1 is hovered */
    .sidebar1:hover + .sidebar2 {
        width: calc(100% - 250px); /* Adjust the width when sidebar1 is expanded */
        margin-left: 250px; /* Set to the same width as expanded sidebar1 */
    }

</style>
