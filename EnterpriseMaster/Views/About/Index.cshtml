@model EnterpriseMaster.DbServices.Models.Database.AboutPage
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
<link href="~/css/about.css" rel="stylesheet" type="text/css">
<div class="headerPrivacy">
    <h1>@Model.AboutUsTitle</h1>
</div>
<div class="responsive-container-block bigContainer">
    <div class="responsive-container-block Container">
        @if (Model.OurMission != null)
        {
            <img class="mainImg" src="data:image;base64,@Convert.ToBase64String(Model.OurMission)">
        }
        <div class="allText aboveText">
            <p class="text-blk headingText">
                @Model.OurMissionTitle
            </p>
            <p class="text-blk subHeadingText">
                @Model.OurMissionTitleLess
            </p>
            <p class="text-blk description">
                @Model.OurMissionTitleText
            </p>
        </div>
    </div>
    <div class="responsive-container-block Container bottomContainer">
        @if (Model.OurVision != null)
        {
            <img class="mainImg" src="data:image;base64,@Convert.ToBase64String(Model.OurVision)">
        }
        <div class="allText bottomText">
            <p class="text-blk headingText">
                @Model.OurVisionTitle
            </p>
            <p class="text-blk subHeadingText">
                @Model.OurVisionTitleLess
            </p>
            <p class="text-blk description">
                @Model.OurVisionTitleText
            </p>
        </div>
    </div>
    <div class="responsive-container-block Container">
        @if (Model.AboutUs != null)
        {
            <img class="mainImg" src="data:image;base64,@Convert.ToBase64String(Model.AboutUs)">
        }
        <div class="allText aboveText">
            <p class="text-blk headingText">
                @Model.AboutUsTitle
            </p>
            <p class="text-blk subHeadingText">
                @Model.AboutUsTitleLess
            </p>
            <p class="text-blk description">
                @Model.AboutUsTitleText
            </p>
        </div>
    </div>
</div>