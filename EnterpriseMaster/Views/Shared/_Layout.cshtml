<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enterprise Master</title>
    <link rel="stylesheet" href="style.css">
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Arvo&display=swap" rel="stylesheet">
</head>
<style>

</style>
<body class="mainbody">
    <div class="navbar" style="background-color: rgba(255, 255, 255, 0.8);">
        <label for="togglericon" class="toggler" checked></label>
        <input type="checkbox" id="togglericon" class="toggler" />

        <div class="brand">
            <img src="~/icon/EnterpriseMaster2.png" style="width: 150px; height:150px;" title="core" alt="" />
        </div>
        <div class="nav">
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("Index", "About")">About</a>

            <div class="dropdown" >
                <label for="toggle-1" id="dropdown-label">Services</label>
                <input type="checkbox" id="toggle-1" />
                <ul id="dropdown-content">
                    <li><a class="amain" href="#">Internet Of Things</a></li>
                    <li><a class="amain" href="#">Game Development</a></li>
                    <li><a class="amain" href="#">Game Design</a></li>
                    <li><a class="amain" href="#">History Telling</a></li>
                </ul>
            </div>

            <div class="dropdown">
                <label for="toggle-2" id="dropdown-label">Support</label>
                <input type="checkbox" id="toggle-2" />
                <ul id="dropdown-content">
                    <li><a class="amain" href="#">Internet Of Things2</a></li>
                    <li><a class="amain" href="#">Game Development2</a></li>
                    <li><a class="amain" href="#">Game Design2</a></li>
                    <li><a class="amain" href="#">History Telling2</a></li>
                </ul>
            </div>
            <a href="#">Contact</a>
            <a href="#">Login</a>
            <a href="#">Register</a>
        </div>
       
    </div>
    <div class="mainRenderBody">
        @RenderBody()
    </div>
    <footer class="border-top bg-dark text-light mainfooter">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2023 Enterprise Master. All rights reserved.</p>
                </div>
                <br />
                <div class="col-md-6 text-md-end">
                    <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
