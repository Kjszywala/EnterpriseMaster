flex-direction: row;
}

.feature-description {
flex: 1;
padding: 20px;
}

.feature-image {
flex: 1;
text-align: right;
padding: 20px;
display: flex;
align-items: center;
justify-content: center;
}

.feature-image img {
max-width: 100%;
height: auto;
}

/* Pricing Section Styles */
.pricing {
background-color: #f9f9f9;
padding: 80px 0;
text-align: center;
}

.pricing h2 {
font-size: 32px;
text-align: center;
margin-bottom: 40px;
}

.plan {
flex: 1;
background-color: #fff;
border: 1px solid #ccc;
padding: 20px;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
transition: transform 0.2s;
border-radius: 8px;
}

.price {
font-size: 24px;
color: #ff6600;
margin-top: 10px;
}

.pricing {
text-align: center;
}

.plan-container {
display: flex;
justify-content: space-between;
margin: 20px auto;
display: flex;
align-items: center;
justify-content: center;
