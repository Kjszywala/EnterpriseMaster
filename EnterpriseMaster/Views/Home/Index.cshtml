@model EnterpriseMaster.DbServices.Models.Database.MainPages
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/index.css" rel="stylesheet" type="text/css">
<style>
    .cta-button:before {
        background-color: initial;
        background-image: linear-gradient(#fff 0, rgba(255, 255, 255, 0) 100%);
        border-radius: 125px;
        content: "";
        height: 50%;
        left: 4%;
        opacity: .5;
        position: absolute;
        top: 0;
        transition: all .3s;
        width: 92%;
    }
</style>
<section class="hero">
    <div class="slideshow-container">
        <div class="mainImageTextDiv">
            @if (Model.MainImage != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.MainImage)" style="width:100%; max-height: 800px;">
            }
            <div class="text">
                <h2 style="color: black;">@Model.TitleOverButton</h2>
                <p>@Model.TextOverButton</p>
                <a href="#pricing" class="cta-button">Get Started</a>
            </div>
        </div>
    </div>
</section>
<br />
<section id="features" class="features">
    <div class="feature-container">
        <div class="feature-description">
            <h2 style="font-size: 24px; margin-bottom: 10px; color: #333;">@Model.AnalyticsTitle</h2>
            @{
                var Enhanced = @Model.AnalyticsOption1.Split(':');
                var Optimized = @Model.AnalyticsOption2.Split(':');
                var Deeper = @Model.AnalyticsOption3.Split(':');
                var Market = @Model.AnalyticsOption4.Split(':');
                var Risk = @Model.AnalyticsOption5.Split(':');
            }
            <ul style="list-style-type: disc; padding-left: 20px; font-size: 16px; color: #333;">
                <li><strong>@Enhanced[0]:</strong> @Enhanced[1]</li>
                <li><strong>@Optimized[0]:</strong> @Optimized[1]</li>
                <li><strong>@Deeper[0]:</strong> @Deeper[1]</li>
                <li><strong>@Market[0]:</strong> @Market[1]</li>
                <li><strong>@Risk[0]:</strong> @Risk[1]</li>
            </ul>
            <p style="font-size: 16px; line-height: 1.4; color: #333;">
                @Model.AnalyticsText
            </p>
        </div>
        <div class="feature-image">
            @if (Model.Analytics != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Analytics)" alt="Analytics Image" style="max-width: 100%; height: auto;">
            }
        </div>
    </div>
    <hr />
    <div class="feature-container">
        <div class="feature-image">
            @if (Model.Sales != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Sales)" alt="Feature 1 Image" style="max-width: 100%; height: auto;">
            }
        </div>
        @{
            var Increased = @Model.SalesOption1.Split(':');
            var Streamlined = @Model.SalesOption2.Split(':');
            var Customer = @Model.SalesOption3.Split(':');
            var Data = @Model.SalesOption4.Split(':');
            var Market2 = @Model.SalesOption5.Split(':');
            var Market23 = @Model.SalesText.Split(':');
        }
        <div class="feature-description">
            <h2 style="font-size: 24px; margin-bottom: 10px; color: #333;">@Model.SalesTitle</h2>
            <p style="font-size: 16px; line-height: 1.4; color: #333;">
                @Market23[0]:
                <ul style="list-style-type: disc; padding-left: 20px; font-size: 16px; color: #333;">
                    <li><strong>@Increased[0]:</strong> @Increased[1]</li>
                    <li><strong>@Streamlined[0]:</strong> @Streamlined[1]</li>
                    <li><strong>@Customer[0]:</strong> @Customer[1]</li>
                    <li><strong>@Data[0]:</strong> @Data[1]</li>
                    <li><strong>@Market2[0]:</strong> @Market2[1]</li>
                </ul>
                @Market23[1]
            </p>
        </div>
    </div>
    <hr />
    @{
        var Inventory = @Model.WarehouseOption1.Split(':');
        var Operating = @Model.WarehouseOption2.Split(':');
        var Order = @Model.WarehouseOption3.Split(':');
        var Insights = @Model.WarehouseOption4.Split(':');
        var Service = @Model.WarehouseOption5.Split(':');
        var management = @Model.WarehouseText.Split(':');
    }
    <div class="feature-container">
        <div class="feature-description">
            <h2 style="font-size: 24px; margin-bottom: 10px; color: #333;">@Model.WarehouseTitle</h2>
            <p style="font-size: 16px; line-height: 1.4; color: #333;">
                @management[0]:
                <ul style="list-style-type: disc; padding-left: 20px; font-size: 16px; color: #333;">
                    <li><strong>@Inventory[0]:</strong> @Inventory[1]</li>
                    <li><strong>@Operating[0]:</strong> @Operating[1]</li>
                    <li><strong>@Order[0]:</strong> @Order[1]</li>
                    <li><strong>@Insights[0]:</strong> @Insights[1]</li>
                    <li><strong>@Service[0]:</strong> @Service[1]</li>
                </ul>
                @management[1]
            </p>
        </div>
        <div class="feature-image">
            @if (Model.Warehouse != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Warehouse)" alt="Feature 1 Image" style="max-width: 100%; height: auto;">
            }
        </div>
    </div>
</section>

<section id="pricing" class="pricing">
    <h2 style="color:#696969;">Subscritions</h2>
    <br />
    <div class="plan-container">
        <div class="subscription-plan">
            <a href="@Url.Action("Index", "BasicSubscription")" style="text-decoration:none;">
                <div class="feature-image-container">
                    @if (Model.BasicPlan != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(Model.BasicPlan)" alt="Feature 1 Image" class="feature-image2">
                    }
                </div>
                <div class="plan-details-container" style="min-height: 300px;">
                    <h3 class="plan-name">@Model.BasicPlanText</h3>
                    <hr />
                    <ul class="plan-features">
                        <li>@Model.BasicPlanOption1</li>
                        <li>@Model.BasicPlanOption2</li>
                        <li>@Model.BasicPlanOption3</li>
                        <li>@Model.BasicPlanOption4</li>
                    </ul>
                </div>
                <div class="plan-description-container">
                    <p class="plan-description">@Model.BasicPlanOption5</p>
                </div>
                <div class="plan-price-container">
                    <hr />
                    <p class="plan-price">@Model.BasicPlanPrice</p>
                </div>
            </a>
        </div>
        <div class="subscription-plan">
            <a href="@Url.Action("Index", "ProfessionalSubscription")" style="text-decoration:none;">
                <div class="feature-image-container">
                    @if (Model.ProPlan != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(Model.ProPlan)" alt="Feature 1 Image" class="feature-image2">
                    }
                </div>
                <div class="plan-details-container" style="min-height: 300px;">
                    <h3 class="plan-name">@Model.ProPlanText</h3>
                    <hr />
                    <ul class="plan-features">
                        <li>@Model.ProPlanOption1</li>
                        <li>@Model.ProPlanOption2</li>
                        <li>@Model.ProPlanOption3</li>
                        <li>@Model.ProPlanOption4</li>
                    </ul>
                </div>
                <div class="plan-description-container">
                    <p class="plan-description">@Model.ProPlanOption5</p>
                </div>
                <div class="plan-price-container">
                    <hr />
                    <p class="plan-price">@Model.ProPlanPrice</p>
                </div>
            </a>
        </div>

        <div class="subscription-plan">
            <a href="@Url.Action("Index", "EnterpriseSubscription")" style="text-decoration:none;">
                <div class="feature-image-container" >
                    @if (Model.EnterprisePlan != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(Model.EnterprisePlan)" alt="Feature 1 Image" class="feature-image2">
                    }
                </div>
                <div class="plan-details-container" style="min-height: 285px;">
                    <h3 class="plan-name">@Model.EnterprisePlanText</h3>
                    <hr />
                    <ul class="plan-features">
                        <li>@Model.EnterprisePlanOption1</li>
                        <li>@Model.EnterprisePlanOption2</li>
                        <li>@Model.EnterprisePlanOption3</li>
                        <li>@Model.EnterprisePlanOption4</li>
                        <li>@Model.EnterprisePlanOption5</li>
                    </ul>
                </div>
                <div class="plan-description-container">
                    <p class="plan-description">@Model.EnterprisePlanOption6</p>
                </div>
                <div class="plan-price">
                    <hr style="color:#7012b3; margin-top:23px;" />
                    <p>@Model.EnterprisePlanPrice</p>
                </div>
            </a>
        </div>
    </div>
</section>
<section id="contact" class="contact-section">
    <h2 class="contact-heading">Contact Us</h2>
    <p class="contact-description">Ready to streamline your business operations? Contact us today!</p>
    <form action="contact.php" method="POST" class="contact-form">
        <input type="text" name="name" placeholder="Your Name" required class="contact-input">
        <input type="email" name="email" placeholder="Your Email" required class="contact-input">
        <textarea name="message" placeholder="Your Message" required class="contact-textarea"></textarea>
        <button type="submit" class="cta-button">Submit</button>
    </form>
</section>
